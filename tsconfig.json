    "files": [
        "./src/Tlv-Specs.ts",
        "./src/Tlv.ts",
        "./src/TlvFactory.ts",
        "./src/TlvParser.ts",
        "./src/TlvSerializer.ts",
        "./typings/tsd.d.ts"
    ]
}
